<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.simcarddemo.QueryData">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Customer Enquiry"
        android:id="@+id/titlecustenq"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search Type :"
        android:id="@+id/title"
        android:layout_below="@+id/titlecustenq"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/spinner"
        android:layout_below="@+id/title"
        android:spinnerMode="dialog"
        android:prompt="@string/document"
        android:entries="@array/Search_arrays"
        android:layout_marginBottom="10dp"/>

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/spinner"
        android:id="@+id/searchView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/searchView"
        android:id="@+id/scroll1"
        android:visibility="invisible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/Custimage"
                android:background="@android:color/transparent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/Custimage"
                android:id="@+id/linear1">


                <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Name : "
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/Name"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/tvName" />
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Document Type :  "
                    android:textSize="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/Passport"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/tvPassport"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Document No : "
                    android:textSize="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/DocumentNo"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/tvID"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Date of Birth : "
                    android:textSize="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/DOB"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/tvDOB"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Nationality : "
                    android:textSize="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/Nationality"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/tvNationality"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Gender : "
                    android:textSize="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/Gender"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/tvGender"/>

                </LinearLayout>


                <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Address : "
                    android:textSize="15dp"
                    android:id="@+id/Address1"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:id="@+id/tvAdd1"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:id="@+id/tvAdd2"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:id="@+id/tvAdd3"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Postcode : "
                    android:layout_marginTop="15dp"
                    android:textSize="15dp"
                    android:id="@+id/Postcode"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:id="@+id/tvPostcode"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_height="wrap_content"
                    android:text="City : "
                    android:layout_marginTop="15dp"
                    android:textSize="15dp"
                    android:id="@+id/City"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:id="@+id/tvCity"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_height="wrap_content"
                    android:text="State : "
                    android:layout_marginTop="15dp"
                    android:textSize="15dp"
                    android:id="@+id/State"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:id="@+id/tvState"
                    android:layout_width="match_parent" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textView31">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ListView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/listView" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Simcard Information"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/textView31"
                android:layout_below="@id/linear1"/>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
