<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.simcarddemo.demoapplication.AddNumber"
    android:background="#87ceeb">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add New Number"
        android:id="@+id/textView33"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:text="Register"
        android:id="@+id/button"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/AtvSerialNo"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:hint="PhoneNo"
        android:background="#f3f3f3"
        android:paddingLeft="5dp"
        android:id="@+id/AtvPhone"
        android:inputType="number|textCapCharacters"
        android:maxLength="12"
        android:textSize="20dp"
        android:layout_below="@+id/Aoperator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:hint="PUK1"
        android:background="#f3f3f3"
        android:paddingLeft="5dp"
        android:id="@+id/AtvPUK1"
        android:inputType="number|textCapCharacters"
        android:layout_alignParentStart="true"
        android:maxLength="8"
        android:textSize="20dp"
        android:layout_below="@+id/AtvPhone"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:hint="PUK2"
        android:background="#f3f3f3"
        android:paddingLeft="5dp"
        android:id="@+id/AtvPUK2"
        android:inputType="number|textCapCharacters"
        android:layout_alignParentStart="true"
        android:maxLength="8"
        android:textSize="20dp"
        android:layout_below="@+id/AtvPUK1"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:hint="SimSerialNo"
        android:background="#f3f3f3"
        android:paddingLeft="5dp"
        android:id="@+id/AtvSerialNo"
        android:maxLength="14"
        android:inputType="number"
        android:textSize="20dp"
        android:layout_below="@+id/AtvPUK2"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Aoperator"
        android:entries="@array/operator_arrays"
        android:prompt="@string/operator"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/textView13"
        android:layout_alignLeft="@+id/AtvPhone"
        android:layout_alignStart="@+id/AtvPhone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView13"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/textView33"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
