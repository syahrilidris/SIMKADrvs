<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.simcarddemo.CustomerInfo"
    android:background="#ffffff">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CUSTOMER INFO"
                android:id="@+id/textView27"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="243dp"
                android:id="@+id/Custimage"
                android:background="@android:color/transparent"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="0.70" />

            <ImageButton
                android:layout_width="104dp"
                android:layout_height="113dp"
                android:id="@+id/imageButton6"
                android:src="@drawable/query"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:layout_marginRight="50dp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Name : "
                    android:id="@+id/textView6"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvName"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_marginBottom="20dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Document Type : "
                    android:id="@+id/textView8"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvPassport"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_marginBottom="20dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Document Number : "
                    android:id="@+id/textView47"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvID"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_marginBottom="20dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Date Of Birth : "
                    android:id="@+id/textView10"
                    android:layout_row="9"
                    android:layout_column="0"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvDOB"
                    android:layout_row="10"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_marginBottom="20dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Nationality : "
                    android:id="@+id/textView12"
                    android:layout_row="11"
                    android:layout_column="0"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvNationality"
                    android:layout_row="12"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_marginBottom="20dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Gender : "
                    android:id="@+id/textView14"
                    android:layout_row="13"
                    android:layout_column="0"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvGender"
                    android:layout_row="14"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_marginBottom="20dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Address : "
                    android:id="@+id/textView15"
                    android:layout_row="23"
                    android:layout_column="0"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvAdd1"
                    android:layout_row="24"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvAdd2"
                    android:layout_row="25"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvAdd3"
                    android:layout_row="25"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_marginBottom="20dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Postcode : "
                    android:id="@+id/textView17"
                    android:layout_row="27"
                    android:layout_column="0"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvPostcode"
                    android:layout_row="28"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_marginBottom="20dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="City : "
                    android:id="@+id/textView18"
                    android:layout_row="29"
                    android:layout_column="0"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvCity"
                    android:layout_row="30"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_marginBottom="20dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="State : "
                    android:id="@+id/textView19"
                    android:layout_row="31"
                    android:layout_column="0"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvState"
                    android:layout_row="32"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_marginBottom="20dp"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

    </TableLayout>
</ScrollView>
